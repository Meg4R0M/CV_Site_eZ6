{% extends noLayout == true ? viewbaseLayout : pagelayout %}

{% block content %}
    <!-- =========================================
    Alternative Home Section
    ========================================== -->
    <!-- alternative-home-section -->
    <div id="alternative-home-section">
        <!-- alternative-home-section-overlayer -->
        <div id="alternative-home-section-overlayer"></div>
        <!-- alternative-home-section-container -->
        <div id="alternative-home-section-container">
            <!-- breadcrumb -->
            <ol class="breadcrumb">
                <li><a href="{{ path('ez_urlalias', {locationId: home_location_id}) }}">Accueil</a></li>
                <li><a href="{{ path('ez_urlalias', {locationId: blog_location_id}) }}">Blog</a></li>
                <li class="active">{{ ez_content_name(content) }}</li>
            </ol><!-- /breadcrumb -->
        </div><!-- /alternative-home-section-container -->
    </div><!-- /alternative-home-section -->
<!-- =========================================
    Page Content
    ========================================== -->
    <!-- page-content -->
    <div id="page-content">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- col-md-8 -->
                <div class="col-md-8 blog-posts">
                    <!-- post-main-wrapper -->
                    <div class="post-main-wrapper">
                        <!-- post-wrapper -->
                        <div class="post-wrapper">
                            <!-- post-header -->
                            <div class="post-header">
                                <!-- post-image -->
                                <div class="post-image">
                                    <img src="{{ ez_field_value(content, 'image_full').uri }}" alt="{{ ez_field_value(content, 'title') }}" />
                                </div><!-- /post-image -->
                            </div><!-- /post-header -->
                            <!-- post-container -->
                            <div class="post-container">
                                <!-- post-title -->
                                <div class="post-title">
                                    <h2>
                                        {{ ez_field_value(content, 'title') }}
                                    </h2>
                                </div><!-- /post-title -->
                                <!-- post-meta -->
                                <div class="post-meta">
                                    <!-- post-date -->
                                    <span class="post-date">
                                        <i class="fa fa-clock-o"></i>
                                        <a href="#" title="Date">{{ ez_field_value(content, 'publication_date')|localizeddate('full', 'none', app.request.locale) }}</a>
                                    </span>
                                    <!-- /post-date -->
                                    <!-- post-author -->
                                    <span class="post-author">
                                        <i class="fa fa-user"></i>
                                        <a href="#" title="Author">{{ ez_field_value(content, 'author') }}</a>
                                    </span>
                                    <!-- /post-author -->
                                    <!-- post-cat -->
                                    <span class="post-cat">
                                        <i class="fa fa-folder-open"></i>
                                        <a href="#" title="Category">Formations</a>
                                    </span>
                                    <!-- /post-cat -->
                                </div><!-- /post-meta -->
                                <!-- post-content -->
                                <div class="post-content">
                                    {{ ez_render_field(content, 'body', {
                                        attr: {
                                            class: 'text-main blog-post-body'
                                        }
                                    }) }}
                                </div><!-- /post-content -->
                            </div><!-- /post-container -->
                        </div><!-- /post-wrapper -->
                    </div><!-- /post-main-wrapper -->
                    <!-- post-share -->
                    <div class="post-share">
                        <span>Partager cet article:</span>
                        <a href="{% if location.isDraft %}#"{% else %}//www.facebook.com/sharer/sharer.php?u={{ app.request.uri }}{{ path(location) }}" target="_blank"{% endif %} class="facebook" title="Facebook">
                            <i class="fa fa-facebook"></i>
                        </a>
                        <a href="{% if location.isDraft %}#"{% else %}//twitter.com/home?status={{ app.request.uri }}{{ path(location) }}" target="_blank"{% endif %} class="twitter" title="Twitter">
                            <i class="fa fa-twitter"></i>
                        </a>
                        <a href="#" class="gplus" title="Google Plus">
                            <i class="fa fa-google-plus"></i>
                        </a>
                    </div><!-- /post-share -->
                </div><!-- /col-md-8 -->
            </div><!-- /row -->
            <section>
                <div class="container">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="row">
                                <div class="col-md-11 space-top">
                                    <div class="col-md-10 col-md-offset-1 space-top space-bottom">
                                        {{ ez_comments_render_content(content.contentInfo) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div><!-- /container -->
    </div><!-- /page-content -->
{% endblock %}
